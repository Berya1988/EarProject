<?xml version="1.0" encoding="UTF-8"?>
<ejb-jar xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
		  http://java.sun.com/xml/ns/javaee/ejb-jar_3_1.xsd"
         version="3.1">
    <enterprise-beans>
        <entity>
            <display-name>Student</display-name>
            <ejb-name>StudentEJB</ejb-name>
            <home>com.berest.beans.student.StudentHome</home>
            <remote>com.berest.beans.student.StudentRemote</remote>
            <local-home>com.berest.beans.student.LocalStudentHome</local-home>
            <local>com.berest.beans.student.LocalStudent</local>
            <ejb-class>com.berest.beans.student.StudentBean</ejb-class>
            <persistence-type>Bean</persistence-type>
            <prim-key-class>java.lang.Integer</prim-key-class>
            <reentrant>true</reentrant>
            <ejb-local-ref>
                <ejb-ref-name>StudentEJB</ejb-ref-name>
                <ejb-ref-type>Entity</ejb-ref-type>
                <local-home>com.berest.beans.student.LocalStudentHome</local-home>
                <local>com.berest.beans.student.LocalStudent</local>
                <ejb-link>StudentEJB</ejb-link>
            </ejb-local-ref>
        </entity>
    </enterprise-beans>
</ejb-jar>
